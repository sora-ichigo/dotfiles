{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task",
      "Skill",
      "Bash(*)",
      "mcp__context7__*",
      "mcp__plugin_context7-plugin_context7__*",
      "mcp__honeybadger__*",
      "mcp__claude_ai_github__*",
      "mcp__pencil__*"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(git push --force *)",
      "Bash(git push --force-with-lease *)",
      "Bash(git reset --hard *)",
      "Bash(git clean -f *)",
      "Bash(git checkout -- .)",
      "Bash(git restore .)"
    ]
  },
  "extraKnownMarketplaces": {
    "context7": {
      "source": {
        "source": "github",
        "repo": "upstash/context7"
      }
    }
  },
  "enabledPlugins": {
    "context7-plugin@context7-marketplace": true
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  }
}
